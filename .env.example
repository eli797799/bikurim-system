# Backend – חיבור ל-PostgreSQL
DATABASE_URL=postgresql://USER:PASSWORD@localhost:5432/bikurim_procurement
BACKEND_PORT=5000

# Frontend – כתובת ה-API (בפיתוח: השרת המקומי)
VITE_API_URL=http://localhost:5000

# סריקת תעודות משלוח – מפתח Google Gemini Vision API
# השג ב- https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here
